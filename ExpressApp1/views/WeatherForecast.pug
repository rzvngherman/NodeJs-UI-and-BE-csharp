extends layout

block content
    include header.pug
    h1= title
    p Welcome to #{title2}
    .container
            if !searchResults
              .result-count
                p No results found for your query
            else
                hr
                hr
                div(class='row card-header')
                    .col Summary
                    div.col Details
                each story in searchResults
                    div(class='row')
                        div.col #{story.summary}
                        div.col #{story.details}